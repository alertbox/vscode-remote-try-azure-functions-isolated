{
    "name": "Azure Functions & C# (.NET Core 3.1)",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",

    "forwardPorts": [7071, 10000, 10001],

    // Set *default* container specific settings.json values on container create.
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },

    // Add the IDs of extensions you want installed when the container is created.
    "extensions": [
        // .NET
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        // Azure
        "ms-vscode.azurecli",
        "ms-azuretools.vscode-azurefunctions",
        // Azure Storage
        "ms-azuretools.vscode-azurestorage",
        // Node.js
        // "christian-kohler.npm-intellisense",
        // "eg2.vscode-npm-script",
        // "dbaeumer.vscode-eslint",
        // "redhat.vscode-yaml",
        // Web
        "msjsdiag.debugger-for-chrome",
        "humao.rest-client",
        // Editor
        "editorconfig.editorconfig",
        "coenraads.bracket-pair-colorizer-2",
        "esbenp.prettier-vscode",
        "visualstudioexptteam.vscodeintellicode",
        "redhat.fabric8-analytics"
    ],

    // Use 'postCreateCommand' to run commands after the container is created.
    // "postCreateCommand": "dotnet restore",

    // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode",
    // Uncomment to indicates whether VS Code should stop the containers when the VS Code window is closed / shut down. Values are "none" and "stopCompose" (default).
    "shutdownAction": "stopCompose",
}
